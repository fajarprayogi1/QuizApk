<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Conclusion"
    android:background="@drawable/gradasi">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:id="@+id/RLc1"
        android:background="@drawable/rounded_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dibawah 20% : anda bukan koruptor"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"

            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25% hingga 50% : anda berbakat jadi koruptor"
            android:layout_below="@+id/tv20"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="diatas 50% : anda adalah seorang koruptor"
            android:layout_below="@+id/tv25"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RLc2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_background"
        android:layout_below="@id/RLc1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/Tvconc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:text="100%"
            android:textSize="40dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RLc2"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        >

        <Button
            android:id="@+id/BtnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done" />

    </RelativeLayout>




</RelativeLayout>